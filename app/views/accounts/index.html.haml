= link_to 'New Account', new_account_path, class: 'btn btn-default pull-right'
%hr

%table.table.table-striped.table-bordered
  %thead
    %th Name
    %th Type
    %th Monthly Income
    %th Montly Expense
    %th Balance
    %th -
  - accounts.each do |account|
    %tr
      %td= account.name
      %td= account.label
      %td.text-right= account.monthly_income
      %td.text-right= account.monthly_expense
      %td.text-right= account.balance
      %td= account.link_to_actions

= render partial: 'shared/overview'
