= simple_form_for account, html: { class: 'form-horizontal' } do |f|
  .row
    = f.input :name, wrapper_html: { class: 'col-xs-6' }
  .row
    = f.input :account_type, include_blank: false, wrapper_html: { class: 'col-xs-4' }
  .row
    = f.input :initial_amount, wrapper_html: { class: 'col-xs-4' }
  .form-group
    = f.button :submit, class: 'btn-primary'
