.col-xs-6
  %h3 Settings
  = simple_form_for @setting, url: settings_path, method: :put do |f|
    = f.input :locale, collection: I18n.available_locales.sort, include_blank: false
    = f.input :language, collection: UserSetting.language.options, include_blank: false
    = f.input :monthly_budget
    = f.submit "Save", class: "btn btn-primary"

.clearfix

.col-xs-6
  %h3 Password
  = simple_form_for @user, url: password_settings_path, method: :patch do |f|
    = f.input :current_password
    = f.input :password
    = f.input :password_confirmation
    = f.submit "Update", class: "btn btn-primary"
