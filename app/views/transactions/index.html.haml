= link_to 'New Transaction', new_transaction_path, class: 'btn btn-default'

%table.table
  %tr
    %th Title
    %th Account
    %th Category
    %th Transaction Type
    %th Date
    %th Amount
  - transactions.each do |transaction|
    %tr
      %td= transaction.title
      %td= transaction.account_name
      %td= transaction.category_name
      %td= transaction.label
      %td= transaction.transaction_date
      %td= transaction.amount

