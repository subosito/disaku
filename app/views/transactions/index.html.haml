= render partial: 'date_range'

%hr
= link_to 'New Transaction', new_transaction_path, class: 'btn btn-default pull-right'

%table.table.table-striped.table-bordered.table-responsive.m-x-t
  %thead
    %th Date
    %th Title
    %th Type
    %th Account
    %th.hidden-xs Category
    %th Amount
    %th -
  %tbody
    = simple_form_for @search, url: transactions_path, method: :get  do |f|
      %tr
        %td -
        %td= f.input_field :title_cont
        %td -
        %td= f.input_field :account_id_eq, as: :select, collection: Account.all.order(:name)
        %td= f.input_field :category_id_eq, as: :select, collection: current_user.categories.order(:name).grouped_options_for_select, as: :grouped_select, group_method: :last
        %td -
        %td= f.button :submit, 'Search', class: 'btn btn-default'
  - transactions.each do |transaction|
    %tr
      %td= transaction.transaction_date
      %td= transaction.title
      %td.text-center= transaction.label
      %td= transaction.account_name
      %td.hidden-xs= transaction.category_name
      %td.text-right= transaction.amount
      %td.text-center= transaction.link_to_actions

.text-center
  = paginate @transactions
