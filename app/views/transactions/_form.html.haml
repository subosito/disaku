= simple_form_for transaction, html: { class: 'form-horizontal' } do |f|
  = f.input :title
  = f.input :transaction_date
  = f.association :account, include_blank: false
  = f.association :category, include_blank: false
  = f.input :amount
  = f.input :comment
  .form-actions
    = f.button :submit, class: 'btn-primary'
