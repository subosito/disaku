.col-md-6.col-md-offset-3.m-t-large
  .panel.panel-default
    .panel-heading
      .panel-title Login
    .panel-body
      = simple_form_for(resource, :as => resource_name, :url => session_path(resource_name), :html => { :role => 'form' }) do |f|
        %fieldset
          = f.input :email, :required => false, :autofocus => true, :wrapper_class => ""
          = f.input :password, :required => false, :wrapper_class => ""
          = f.input :remember_me, :as => :boolean, :inline_label => true, :label => false, :wrapper_class => "" if devise_mapping.rememberable?
          = f.button :submit, "Sign in", :class => 'btn btn-primary'
    .panel-footer
      = render "devise/shared/links"

