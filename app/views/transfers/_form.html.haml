= simple_form_for transfer, html: { class: 'form-horizontal' } do |f|
  .row
    = f.input :title, wrapper_html: { class: 'col-xs-10' }
  .row
    = f.label :transfer_date
    .clearfix
    = f.input_field :transfer_date, order: [:day, :month, :year]

  .row
    = f.association :from_account, include_blank: false, wrapper_html: { class: 'col-xs-4' }
  .row
    = f.association :to_account, include_blank: false, wrapper_html: { class: 'col-xs-4' }
  .row
    = f.input :amount, wrapper_html: { class: 'col-xs-6' }
  .form-group
    = f.button :submit, class: 'btn-primary'
