= simple_form_for transfer, html: { class: 'form-horizontal' } do |f|
  .row
    = f.input :title, wrapper_html: { class: 'col-xs-10' }
  .row
    = f.label :transfer_date
    .clearfix
    = f.input_field :transfer_date, order: [:day, :month, :year]
  .row
    = f.association :from_account, include_blank: false,
      collection: current_user.accounts_grouped_options,
      as: :grouped_select, group_method: :last,
      wrapper_html: { class: 'col-xs-5 col-md-4' }
  .row
    = f.association :to_account, include_blank: false,
      collection: current_user.accounts_grouped_options,
      as: :grouped_select, group_method: :last,
      wrapper_html: { class: 'col-xs-5 col-md-4' }
  .row
    = f.input :amount, wrapper_html: { class: 'col-xs-6' }
  .form-group
    = f.button :submit, class: 'btn-primary'
