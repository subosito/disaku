= link_to 'New Category', new_category_path, class: 'btn btn-default pull-right'

%table.table.table-striped.table-bordered.table-responsive.m-t-large
  %thead
    %th Name
    %th Type
    %th Incomes
    %th Expenses
    %th -
  - categories.each do |category|
    %tr
      %td= category.link_to_transactions
      %td.text-center= category.label
      %td.text-right= category.incomes_with_range
      %td.text-right= category.expenses_with_range
      %td.text-center= category.link_to_actions
